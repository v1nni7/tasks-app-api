// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  firstName      String?
  lastName       String?
  password       String
  username       String   @unique
  profilePicture String?
  boards         Boards[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Boards {
  id         Int       @id @default(autoincrement())
  userId     Int
  stringId   String    @unique
  name       String
  background String
  Users      Users?    @relation(fields: [userId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  columns    Columns[]
  tasks      Tasks[]
}

model Columns {
  id        Int      @id @default(autoincrement())
  stringId  String   @unique
  order     Int
  boardId   String
  title     String
  Boards    Boards?  @relation(fields: [boardId], references: [stringId])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Tasks[]
}

model Tasks {
  id        Int      @id @default(autoincrement())
  stringId  String   @unique
  order     Int
  boardId   String
  columnId  Int
  title     String
  boards    Boards?  @relation(fields: [boardId], references: [stringId])
  columns   Columns? @relation(fields: [columnId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
