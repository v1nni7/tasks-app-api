model Boards {
  id         Int       @id @default(autoincrement())
  userId     Int
  stringId   String    @unique
  name       String
  background String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  columns    Columns[]
  tasks      Tasks[]
}

model Columns {
  id        Int      @id @default(autoincrement())
  stringId  String   @unique
  order     Int
  boardId   String
  title     String
  Boards    Boards?  @relation(fields: [boardId], references: [stringId])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Tasks     Tasks[]
}

model Tasks {
  id        Int      @id @default(autoincrement())
  stringId  String   @unique
  order     Int
  boardId   String
  columnId  String
  title     String
  Boards    Boards?  @relation(fields: [boardId], references: [stringId])
  Columns   Columns? @relation(fields: [columnId], references: [stringId])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
